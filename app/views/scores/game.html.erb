<!DOCTYPE html>
<html ng-app="preventGame">
<head>
  <% provide(:title, 'Vax') %>
  <%= javascript_include_tag "d3.v3" %>
  <%= javascript_include_tag "jsnetworkx" %>
  <%= javascript_include_tag "graphTools" %>
  <%= javascript_include_tag "deepCopy" %>
  <%= javascript_include_tag "game"%>
  <%= csrf_meta_tags %>
</head>

<body ng-controller="preventGameCTRL">


<div class="container" ng-model="worstCase" ng-model="targetWorstCase"  ng-model="numberOfCommunities"  ng-model="largestCommunity" ng-model="vaccinesUsed" >
  <div class="span2"></div>
  <a class="btn-large btn-info">
    Largest Group: {{largestCommunity}}
  </a>
  <a class="btn-large btn-warning">
    Susceptible Groups: {{numberOfCommunities}}
  </a>
  <a class="btn-large btn-inverse">
    Vaccines Used: {{vaccinesUsed}}
  </a>
</div>

<div><br></div>

<button class="btn-success span4 offset1" ng-click='toggleDegree()'> Size By Neighbor Count
</button>

<button class="btn-danger span4 offset1" ng-click='toggleBC()'> Size By Betweenness
</button>

</div>

<div class="progress span10" ng-model="completion">
  <div class="bar bar-success" style="width: {{completion}}%;"></div>

</div>

<button class="btn-danger btn-large span9 offset1"
        ng-click = 'vaccinate()'>
  Vaccinate!
</button>


<button class="btn-warning btn-large span9 offset1"
   ng-model = "vaccinesUsed"
   ng-click = 'finalize()'
   data-toggle="modal"
   href="#scoreModal">Submit {{vaccinesUsed}} vaccinations </button>


<div class="modal hide" id="scoreModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Score Review</h3>
  </div>
  <div class="modal-body">

    <%= form_for(Score.create) do |f| %>
        <%= f.label :vax, ('Vaccinated Individuals') %>
        <%= f.text_field :vax,  :'ng-model' => 'vax' %>

        <%= f.label :net_id, ('Network ID') %>
        <%= f.text_field :net_id, 'ng-model' => 'net_id' %>

        <%= f.label :sim_size, ('Predicted Epidemic Size') %>
        <%= f.text_field :sim_size, 'ng-model' => 'sim_size' %>

        <%= f.label :stars, ('Completion') %>
        <%= f.text_field :stars, 'ng-model' => 'stars'%>

        <%= f.submit 'Submit', class: 'btn btn-primary'%>
    <%end%>
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>


</body>

<div> <br> </div>



</html>




